<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="NotasAcademicasApp.Views.NotasPage"
             Title="Notas"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NotasAcademicas.App.Views"
             xmlns:models="clr-namespace:NotasAcademicasApp.Models"
             xmlns:local="clr-namespace:NotasAcademicasApp.Views"
             xmlns:models1="clr-namespace:NotasAcademicasApp.Models"
             xmlns:viewModels="clr-namespace:NotasAcademicasApp.ViewModels">

    <ContentPage.BindingContext>
        <viewModels:NotaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Button Text="Actualizar" Clicked="OnActualizarNotas"/>
        <Button Text="Agregar Nota" Clicked="OnAgregarNota" />
        <CollectionView ItemsSource="{Binding Notas}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models1:NotaAcademica">
                    <Frame BorderColor="Gray" Margin="5">
                        <StackLayout>
                            <Label Text="Estudiante ID:" FontAttributes="Bold" />
                            <Label Text="{Binding EstudianteId}" />
                            <Label Text="Materia ID:" FontAttributes="Bold" />
                            <Label Text="{Binding MateriaId}" />
                            <Label Text="CalificaciÃ³n:" FontAttributes="Bold" />
                            <Label Text="{Binding Calificacion}" />
                            <Label Text="Fecha:" FontAttributes="Bold" />
                            <Label Text="{Binding FechaEvaluacion}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>